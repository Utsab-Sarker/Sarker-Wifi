<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Sarker WiFi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">WiFi Connection Registration</h4>
                    </div>
                    <div class="card-body">
                        <% if (error) { %>
                            <div class="alert alert-danger"><%= error %></div>
                        <% } %>

                        <form method="POST" action="/register">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Name (English) *</label>
                                    <input type="text" class="form-control" name="name" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Mobile Number *</label>
                                    <input type="tel" class="form-control" name="mobile" pattern="[0-9]{11}" required>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Email Address *</label>
                                    <input type="email" class="form-control" name="email" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Date of Birth *</label>
                                    <input type="date" class="form-control" name="dob" required>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Block *</label>
                                    <select class="form-select" name="block" required>
                                        <option value="">Select Block</option>
                                        <option value="ক">ক</option>
                                        <option value="খ">খ</option>
                                        <option value="গ">গ</option>
                                        <option value="ঘ">ঘ</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Room Number *</label>
                                    <select class="form-select" name="roomNumber" required>
                                        <option value="">Select Room</option>
                                        <option value="1">01</option>
                                        <option value="2">02</option>
                                        <option value="3">03</option>
                                        <option value="4">04</option>
                                        <option value="5">05</option>
                                        <option value="6">06</option>
                                        <option value="7">07</option>
                                        <option value="8">08</option>
                                        <option value="9">09</option>
                                        <option value="10">10</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">How many devices? *</label>
                                <select class="form-select" name="deviceCount" id="deviceCount" required>
                                    <option value="">Select device count</option>
                                    <option value="1">One Device</option>
                                    <option value="2">Two Devices</option>
                                </select>
                            </div>

                             <div class="col-md-6 mb-3">
                                <label class="form-label">Device Type *</label>
                                <select class="form-select" name="deviceType" id="registerDeviceType" required>
                                    <option value="">Select device type</option>
                                </select>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Password *</label>
                                    <input type="password" class="form-control" name="password" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Confirm Password *</label>
                                    <input type="password" class="form-control" name="confirmPassword" required>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Register</button>
                            </div>
                        </form>

                        <div class="text-center mt-3">
                            <p>Already registered? <a href="/login">Go to login page</a></p>
                            <p><a href="/">Back to Home</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function updateRegisterDeviceTypeOptions() {
            const deviceCount = document.querySelector('select[name="deviceCount"]').value;
            const deviceTypeSelect = document.getElementById('registerDeviceType');

            // Clear existing options
            deviceTypeSelect.innerHTML = '<option value="">Select device type</option>';

            if (deviceCount == 1) {
                deviceTypeSelect.innerHTML += `
                    <option value="Mobile">Mobile</option>
                    <option value="Laptop">Laptop</option>
                `;
            } else if (deviceCount >= 2) {
                deviceTypeSelect.innerHTML += `
                    <option value="Both Mobile">Both Mobile</option>
                    <option value="Both Laptop">Both Laptop</option>
                    <option value="Mobile + Laptop">Mobile + Laptop</option>
                `;
            }
        }

        // Initialize on page load and add event listener
        document.addEventListener('DOMContentLoaded', function() {
            const deviceCountSelect = document.querySelector('select[name="deviceCount"]');
            deviceCountSelect.addEventListener('change', updateRegisterDeviceTypeOptions);
            updateRegisterDeviceTypeOptions();
        });
    </script>
</body>
</html>